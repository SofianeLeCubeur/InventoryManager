<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_box"
    android:padding="8dp">

    <ImageView
        android:id="@+id/qrcode_header_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:background="@drawable/small_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/qrcode_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/qrcode_header_icon"
        app:layout_constraintTop_toTopOf="@id/qrcode_header_icon"
        app:layout_constraintBottom_toBottomOf="@id/qrcode_header_icon"
        android:layout_marginStart="12dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/qrcode_header_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="2dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/share_variant"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackgroundBorderless"
        app:tint="@color/foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>