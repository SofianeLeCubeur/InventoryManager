<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_box"
    android:layout_marginBottom="10dp"
    android:padding="8dp">

    <View
        android:id="@+id/tracker_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:background="@drawable/small_icon"
        android:backgroundTint="@color/placeholder_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/tracker_label"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:background="@color/placeholder_color"
        app:layout_constraintLeft_toRightOf="@id/tracker_icon"
        app:layout_constraintTop_toTopOf="@id/tracker_icon"
        app:layout_constraintBottom_toBottomOf="@id/tracker_icon"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:text="Track B, Main conveyor belt" />
    
    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/tag"
        android:backgroundTint="@color/placeholder_color"
        android:tint="@color/foreground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>