<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/white_box"
    android:layout_marginBottom="10dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="10dp">

    <View
        android:id="@+id/inventory_placeholder_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/small_icon"
        android:backgroundTint="@color/placeholder_color"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/inventory_placeholder_icon"
        app:layout_constraintTop_toTopOf="@id/inventory_placeholder_icon"
        app:layout_constraintBottom_toBottomOf="@id/inventory_placeholder_icon"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <View
            android:layout_width="150dp"
            android:background="@color/placeholder_color"
            android:layout_height="24dp"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/cube_outline"
                android:tint="@color/colorAccent"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                />

            <View
                android:background="@color/placeholder_color"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:drawablePadding="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/radar"
                android:tint="@color/colorAccent"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                />

            <View
                android:background="@color/placeholder_color"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:drawablePadding="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_ionic_ios_pin"
                android:tint="@color/colorAccent"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                />

            <View
                android:background="@color/placeholder_color"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:drawablePadding="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>
    
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/icon_material_chevron_right"
        android:tint="@color/foreground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>