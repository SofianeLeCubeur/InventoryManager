pipeline {
    agent {
        docker {
            image 'pdmlab/jenkins-node-docker-agent:6.11.1'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage("shutdown"){
            steps {
                sh 'docker-compose down'
            }
        }

        stage("build"){
            steps {
                docker.build('im-api-server', 'WebServer')
            }
        }

        stage("deploy"){
            steps {
                echo 'DEPLOYING'
                sh 'docker-compose up -d'
            }
        }
    }
}